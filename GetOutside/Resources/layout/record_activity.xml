<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/recordActivityMainLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/GetOutsideBackground"

    >

   <LinearLayout
        android:id="@+id/recordActivityUpperLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
    >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recordActivityLowerLinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="18"
    >
        <Button
            android:text="Record Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordOutsideHoursButton"
            android:backgroundTint="@color/springGreen"
            android:textColor="@color/outsideBrown"
        />
    
    </LinearLayout>

</LinearLayout>