
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
       <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textInputEditText1" />
    <TextView
        android:text="Select Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addHoursForTodayTextView"
        android:textColor="@android:color/black"
        android:paddingTop="20dp"
        android:textSize="20dp"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Date: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"
            android:textSize="16dp"
            android:id="@+id/dateTextView"
            android:textStyle="bold"
        />
        <EditText
            android:inputType="datetime"
            android:text="1"
            android:hint="1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/dateOfActivityText"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
             />
        <TextView
            android:text="Hours To Add: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"
            android:textSize="16dp"
            android:id="@+id/hoursToAddTextView"
            android:textStyle="bold"
        />
        <EditText
            android:inputType="number"
            android:text="1"
            android:hint="1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/hoursToAddText"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
             />
    </LinearLayout>
   <Button
                android:text="Add to total"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/addHoursButton"
                android:backgroundTint="#23cfa7"
                android:textColor="@android:color/black"
                android:width="200dp"
                android:layout_gravity="center_horizontal"
    />
</LinearLayout>