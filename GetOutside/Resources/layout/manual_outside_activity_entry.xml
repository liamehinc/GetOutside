
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/GetOutsideBackground"
    >


    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_gravity="center_horizontal|center_vertical|fill_horizontal"
        android:id="@+id/dateOfActivityDatePicker"
        android:datePickerMode="calendar" 
        />
    
        <TextView
            android:text="Hours To Add: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"
            android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/hoursToAddTextView"
            android:textStyle="bold"
            android:layout_weight="1"
        />
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hoursToAddNumberPicker"
            android:layout_weight="1"
            android:verticalScrollbarPosition="right"
        android:layout_gravity="center_horizontal"
            android:minWidth="25px"
            android:minHeight="25px">
        </NumberPicker>
    <Button
        android:text="Add to total"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/addHoursButton"
        android:backgroundTint="#23cfa7"
        android:textColor="@android:color/black"
        android:width="200dp"
        android:layout_gravity="center_horizontal"
    />
</LinearLayout>