
<LinearLayout
    android:id="@+id/dashboardMainLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/GetOutsideBackground"
    >

   <LinearLayout
        android:id="@+id/dashboardUpperLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
    >
        <Chronometer
            android:text="Total Outside Activity Time"
            android:layout_width="384.5dp"
            android:layout_height="201.5dp"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            android:textColor="@color/outsideBrown"
            android:backgroundTint="@color/springGreen"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_marginTop="90dp"
            android:id="@+id/viewTotalOutsideHoursChronometer"
        />
               
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dashboardLowerLinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="18"
    >
        <Button
            android:text="View Total Outside Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewTotalOutsideHoursButton"
            android:backgroundTint="@color/springGreen"
            android:textColor="@color/outsideBrown"
        />
    
    </LinearLayout>

</LinearLayout>